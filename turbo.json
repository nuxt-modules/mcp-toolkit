{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "globalEnv": [
    "AI_GATEWAY_API_KEY",
    "STUDIO_GITHUB_CLIENT_ID",
    "STUDIO_GITHUB_CLIENT_SECRET"
  ],
  "globalDependencies": [".env"],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".vercel/output/**", "dist/**", ".output/**", ".nuxt/**"]
    },
    "dev": {
      "dependsOn": ["dev:prepare"],
      "cache": false,
      "persistent": true
    },
    "dev:prepare": {
      "dependsOn": ["^dev:prepare"],
      "outputs": ["dist/**", ".output/**", ".nuxt/**"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["transit"]
    },
    "eval": {
      "cache": false
    },
    "eval:ui": {
      "cache": false,
      "persistent": true
    }
  }
}
