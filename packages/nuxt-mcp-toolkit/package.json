{
  "name": "@nuxtjs/mcp-toolkit",
  "version": "0.6.2",
  "description": "Create MCP servers directly in your Nuxt application. Define tools, resources, and prompts with a simple and intuitive API.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt-modules/mcp-toolkit.git"
  },
  "homepage": "https://mcp-toolkit.nuxt.dev",
  "bugs": {
    "url": "https://github.com/nuxt-modules/mcp-toolkit/issues"
  },
  "author": "Hugo Richard <hugo.richard@vercel.com>",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    },
    "./server": {
      "types": "./dist/runtime/server/mcp/definitions/index.d.ts",
      "import": "./dist/runtime/server/mcp/definitions/index.js"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ],
      "server": [
        "./dist/runtime/server/mcp/definitions/index.d.ts"
      ]
    }
  },
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module-build build",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
    "prepack": "nuxt-module-build build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "vue-tsc --noEmit",
    "release": "pnpm run typecheck && pnpm run test && pnpm run lint && pnpm run build && npm publish && git push --follow-tags"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@nuxt/kit": "^4.2.2",
    "automd": "^0.4.2",
    "chokidar": "^5.0.0",
    "defu": "^6.1.4",
    "ms": "^2.1.3",
    "pathe": "^2.0.3",
    "satori": "^0.19.1",
    "scule": "^1.3.0",
    "tinyglobby": "^0.2.15"
  },
  "peerDependencies": {
    "zod": "^4.1.13",
    "agents": ">=0.3.6"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    },
    "agents": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.2",
    "@nuxt/test-utils": "^3.23.0",
    "@types/node": "latest",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.2",
    "nuxt": "^4.2.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.17",
    "vue-tsc": "^3.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
