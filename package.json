{
  "name": "@nuxtjs/mcp-toolkit-monorepo",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuxt-modules/mcp-toolkit.git"
  },
  "author": "Hugo Richard <hugo.richard@vercel.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "turbo dev --filter=@nuxtjs/mcp-toolkit-playground",
    "dev:prepare": "turbo dev:prepare",
    "dev:docs": "turbo dev --filter=@nuxtjs/mcp-toolkit-docs",
    "build": "turbo build",
    "build:module": "turbo build --filter=@nuxtjs/mcp-toolkit",
    "build:docs": "turbo build --filter=@nuxtjs/mcp-toolkit-docs",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:docs": "turbo lint --filter=@nuxtjs/mcp-toolkit-docs",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "typecheck:docs": "turbo typecheck --filter=@nuxtjs/mcp-toolkit-docs",
    "eval": "turbo eval --filter=@nuxtjs/mcp-toolkit-docs",
    "eval:ui": "turbo eval:ui --filter=@nuxtjs/mcp-toolkit-docs",
    "clean": "turbo clean",
    "automd": "npx automd --config .github/automd.json"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.12.1",
    "eslint": "^9.39.2",
    "turbo": "^2.6.3",
    "typescript": "~5.9.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
